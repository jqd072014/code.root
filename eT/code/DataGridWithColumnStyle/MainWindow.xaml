<Window x:Class="DataGridWithColumnStyle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.codeplex.com/CompositeWPF"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" Height="23" HorizontalAlignment="Left"  Name="comboBox1" VerticalAlignment="Top" Width="220" SelectionChanged="comboBox1_SelectionChanged" >
            <ComboBoxItem Name="DurTrader">Duration Trader Style</ComboBoxItem>
            <ComboBoxItem Name="_5_10YR">5-10YR</ComboBoxItem>
        </ComboBox>
        <ContentControl Grid.Row="1"  cal:RegionManager.RegionName="PricingGridRegion" />
    </Grid>
</Window>
